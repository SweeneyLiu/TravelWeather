<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title="联系我"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:orientation="vertical"
        >

        <TextView
            style="@style/SettingTextStyle"
            android:drawableLeft="@drawable/contact_qq"
            android:drawablePadding="@dimen/common_dimen"
            android:text="305264677"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/dividers_black"/>

        <TextView
            style="@style/SettingTextStyle"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/common_dimen"
            android:text="lsw305264677@163.com"
            />

    </LinearLayout>
</LinearLayout>
